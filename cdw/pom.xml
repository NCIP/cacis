<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>pco</artifactId>
        <groupId>gov.nih.nci.cacis</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <name>cdw</name>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>cdw</artifactId>
	<description>CaCIS component to work with Virtuoso as the ClinicalDataWarehouse</description>
    <packaging>jar</packaging>
    
    <properties>
       <test.unit.branchrate>35</test.unit.branchrate>
       <test.unit.linerate>35</test.unit.linerate>
       
       <virtuoso.server>localhost</virtuoso.server>
       <virtuoso.port>1111</virtuoso.port>
       <virtuoso.db.username>dba</virtuoso.db.username>
       <virtuoso.db.password>dba</virtuoso.db.password>
       <sesame.local.repo.managder.dir>${project.build.directory}/test-classes/repomngrdir/</sesame.local.repo.managder.dir>
       <output.dir>${project.build.directory}/test-classes/</output.dir>
       <memory.store.persist>false</memory.store.persist>
    </properties>

    <dependencies>
		<dependency>
            <groupId>gov.nih.nci.cacis</groupId>
            <artifactId>esd-commons</artifactId>
            <version>${project.version}</version>
        </dependency>
		
        <dependency>
            <groupId>org.openlinksw</groupId>
            <artifactId>virt-sesame</artifactId>
            <version>${virt.sesame.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/virt_sesame2.jar</systemPath>
        </dependency>
		
		<dependency>
            <groupId>org.openlinksw</groupId>
            <artifactId>virt-jdbc</artifactId>
            <version>${virt.jdbc.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/virtjdbc3.jar</systemPath>
        </dependency>
		
		<dependency>
            <groupId>org.openrdf</groupId>
            <artifactId>sesame</artifactId>
            <version>${sesame.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/openrdf-sesame-2.1.2-onejar.jar</systemPath>
        </dependency>
        
        <dependency>
		    <groupId>commons-dbcp</groupId>
		    <artifactId>commons-dbcp</artifactId>
		    <version>1.2.2</version>
		</dependency>
		
     </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
			<resource>
                <directory>src/test/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
        <plugins>
        	<plugin>
		        <groupId>org.codehaus.mojo</groupId>
		        <artifactId>properties-maven-plugin</artifactId>
		        <version>1.0-alpha-2</version>
		        <executions>
		          <execution>
		            <phase>process-classes</phase>
		            <goals>
		              <goal>write-project-properties</goal>
		            </goals>
		            <configuration>
		               <outputFile>${project.build.directory}/test-classes/cdw-test.properties</outputFile>
		            </configuration>
		          </execution>
		        </executions>
	       </plugin>
	  </plugins>
    </build>

</project>
