    <properties>
        <!--WSDL generates a lot of classes. Need to set this low -->
        <test.unit.branchrate>0</test.unit.branchrate>
        <test.unit.linerate>20</test.unit.linerate>

        <!--  Temporary directory for System test output file -->
        <outputRootdir>${user.home}</outputRootdir>
        <cacis.mc.temp.dir>${outputRootdir}/.cacis/mc/tmp</cacis.mc.temp.dir>
    </properties>

