<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <artifactId>pco</artifactId>
        <groupId>gov.nih.nci.cacis</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>transformer</artifactId>
    <packaging>jar</packaging>
    <name>transformer</name>

    <properties>
        <mirthConnect.cli>${user.home}/Applications/Mirth Connect/Mirth Connect CLI</mirthConnect.cli>
        <outputRootdir>${user.home}</outputRootdir>
        <cdfOutputDir>${outputRootdir}/.cacis/mc/output/cdf/</cdfOutputDir>
        <xccdOutputDir>${outputRootdir}/.cacis/mc/output/xccd/</xccdOutputDir>
        <test.unit.branchrate>65</test.unit.branchrate>
        <test.unit.linerate>65</test.unit.linerate>
    </properties>

    <dependencies>
        <dependency>
            <groupId>gov.nih.nci.cacis</groupId>
            <artifactId>esd-commons</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        
        <plugins>
	       <plugin>
	           <groupId>com.google.code.maven-replacer-plugin</groupId>
	           <artifactId>maven-replacer-plugin</artifactId>
	           <version>1.3.8</version>
	           <executions>
	               <execution>
	                   <phase>compile</phase>
	                   <goals>
	                       <goal>replace</goal>
	                   </goals>                   
	               </execution>
	           </executions>
	           <configuration>
	               <file>src/main/resources/channels/Trim-2-CCD-xslt.xml</file>
	               <outputFile>target/classes/channels/Trim-2-CCD-xslt.xml</outputFile>
	               <replacements>
	                   <replacement>
	                       <token>CCD_OUTPUT_DIR</token>
	                       <value>${xccdOutputDir}</value>
	                   </replacement>
	                   <replacement>
	                       <token>TRIM2CCD-XSLT</token>
	                       <valueFile>sample_Trim2CCD.xslt</valueFile>
	                   </replacement>         
	               </replacements>
	           </configuration>
	       </plugin>
    	</plugins>
    </build>

    <profiles>
        <profile>
            <id>cacis-ci</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>gov.nih.nci.cacis</groupId>
                        <artifactId>mirthconnect-maven-plugin</artifactId>
                        <version>${project.version}</version>
                        <configuration>
                            <mirthConnect>${mirthConnect.cli}</mirthConnect>
                            <script>${build.outputDirectory}/deploy.mc</script>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>cli</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
